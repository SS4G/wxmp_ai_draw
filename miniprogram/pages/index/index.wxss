/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}

.index-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-image: url(https://6d69-mini-program1-6gs2uj9nf2b87c9e-1302984141.tcb.qcloud.la/chatgpt_imgs/cover222.png?sign=2165798dee68e1a2ad7969771a6be215&t=1679669833);
  background-position: 0% 0%;
  background-size: cover;   
}

.picture {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 40vh;
  background-size: cover;
}
.input-box {
  width: 80%;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 10rpx;
}
.submit-button {
  width: 80%;
  height: 80rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.button {
  background-color: hsl(0, 80%, 47%); /* 默认背景颜色 */
  border: 1px solid #ccc; /* 默认边框 */
  border-radius: 4px; /* 圆角 */
  width: 80%;
  height: 80rpx;
  color: #333; /* 默认文本颜色 */
  font-size: 14px; /* 字号 */
  padding: 10px 20px; /* 内边距 */
  cursor: pointer; /* 鼠标悬停形态 */
}

.button:active {
  background-color: #ccc; /* 按下背景颜色 */
  border-color: #999; /* 按下边框颜色 */
  color: #fff; /* 按下文本颜色 */
}

.header-img {
  width: 100%;
  height: 30%;
  object-fit: cover;
}

.form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  width: 80%;
}

.input {
  width: 100%;
  height: 50px;
  padding: 10px;
  border: none;
  border-radius: 5px;
  margin-bottom: 10px;
  border: 1rpx solid rgba(27, 24, 24, 0.925);
  border-radius: 8rpx;
  padding: 10rpx;
}

.btn {
  width: 90%;
  height: 50px;
  border: none;
  border-radius: 5px;
  background-color: #007aff;
  color: #fff;
  font-size: 18px;
  text-align: center;
  line-height: 50px;
}

.btn:active {
  width: 90%;
  height: 50px;
  border: none;
  border-radius: 5px;
  background-color: #e6edf5;
  color: #fff;
  font-size: 18px;
  text-align: center;
  line-height: 50px;
}

.btn-hover {
  opacity: 0.6;
}

.result {
  width: 80%;
  height: 200px;
  padding: 10px;
  border: none;
  border-radius: 5px;
  resize: none;
}

.cover-btn {
	position: 0 100rpx;
	border: 3rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0 30rpx;
	font-size: 32rpx;
	height: 100rpx;
	line-height: 1;
	text-align: center;
	text-decoration: none;
	overflow: visible;
	margin-left: initial;
	transform: translate(0rpx, 0rpx);
	margin-right: initial;
}